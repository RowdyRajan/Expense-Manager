<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.expensetracker.AddExpenseActivity" >

    <TextView
        android:id="@+id/AddExpenseNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/EditAddExpenseNameText"
        android:layout_marginLeft="10dp"
        android:text="Expense Name"
        
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/EditAddExpenseNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:layout_toRightOf="@+id/AddExpenseNameText"
        android:ems="10" />

    <EditText
        android:id="@+id/EditAddExpenseDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textAddExpenseDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10" >

        
    </EditText>

    <TextView
        android:id="@+id/textAddExpenseDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AddExpenseNameText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Description"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textAddExpenseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/AddExpenseNameText"
        android:layout_centerVertical="true"
        android:text="Date"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/EditAddExpenseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textAddExpenseDate"
        android:layout_alignLeft="@+id/EditAddExpenseCategory"
        android:ems="10" />

    <TextView
        android:id="@+id/textAddExpenseCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textAddExpenseDate"
        android:layout_below="@+id/textAddExpenseDate"
        android:layout_marginTop="24dp"
        android:text="Category"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/EditAddExpenseCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textAddExpenseCategory"
        android:layout_toRightOf="@+id/textAddExpenseCategory"
        android:ems="10" />

    <TextView
        android:id="@+id/textAddExpenseAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textAddExpenseCategory"
        android:layout_below="@+id/textAddExpenseCategory"
        android:layout_marginTop="26dp"
        android:text="Amount"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/EditAddExpenseAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textAddExpenseAmount"
        android:layout_alignLeft="@+id/EditAddExpenseCategory"
        android:ems="10" 
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/textAddExpenseCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textAddExpenseAmount"
        android:layout_below="@+id/textAddExpenseAmount"
        android:layout_marginTop="28dp"
        android:text="Currency"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/EditAddExpenseCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textAddExpenseCurrency"
        android:layout_alignLeft="@+id/EditAddExpenseAmount"
        android:ems="10" />

    <Button
        android:id="@+id/btnAddExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Add" />

</RelativeLayout>
