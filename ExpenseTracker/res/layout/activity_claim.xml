<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.expensetracker.ClaimActivity" >

    <TextView
        android:id="@+id/claimInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ListView
        android:id="@+id/ExpenseList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ClaimEditBtn"
        android:layout_above="@+id/ExpenseSubmitButton"
       	android:layout_alignParentTop="true"
        android:layout_marginTop="80dp" >
    </ListView>

    <Button
        android:id="@+id/ClaimEditBtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ExpenseRemoveBtn"
        android:layout_alignParentLeft="true"
        android:text="Edit Claim" />

    <Button
        android:id="@+id/ExpenseRemoveBtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ExpenseAddBtn"
        android:layout_alignBottom="@+id/ExpenseAddBtn"
        android:layout_centerHorizontal="true"
        android:text="Remove" />

    <Button
        android:id="@+id/ExpenseAddBtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ExpenseList"
        android:layout_below="@+id/claimInfo"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/claimInfo"
        android:text="Add" />

    <Button
        android:id="@+id/ExpenseSubmitButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
       
        android:text="Submit" />
    
    <Button
        android:id="@+id/ExpenseEmailBtm"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/ExpenseSubmitButton"
       	android:layout_alignRight="@+id/ExpenseAddBtn"
       	android:layout_alignLeft="@+id/ExpenseAddBtn"
        android:text="Email" />
    
</RelativeLayout>
