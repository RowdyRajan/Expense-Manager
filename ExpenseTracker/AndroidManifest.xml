<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.expensetracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddClaimActivity"
            android:label="@string/title_activity_add_claim" >
        </activity>
        <activity
            android:name=".ClaimActivity"
            android:label="@string/title_activity_claim" >
        </activity>
        <activity
            android:name=".AddExpenseActivity"
            android:label="@string/title_activity_add_expense" >
        </activity>
        <activity
            android:name=".RemoveExpenseActivity"
            android:label="@string/title_activity_remove_expense" >
        </activity>
        <activity
            android:name=".RemoveClaimsActivity"
            android:label="@string/title_activity_remove_claims" >
        </activity>
        <activity
            android:name=".EditClaimInfoActivity"
            android:label="@string/title_activity_edit_claim_info" >
        </activity>
        <activity
            android:name=".ExpenseItemActivity"
            android:label="@string/title_activity_expense_item" >
        </activity>
        <activity
            android:name=".EditExpenseItemActivity"
            android:label="@string/title_activity_edit_expense_item" >
        </activity>
        <activity
            android:name=".SendEmailActivity"
            android:label="@string/title_activity_send_email" >
        </activity>
    </application>

</manifest>
